RewriteEngine On

# Base directory for production environment
RewriteBase /~hzhu20/

# Serve static assets directly and do not rewrite the URL
RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot)$ [NC]
RewriteRule ^ - [L]

# Redirect /api requests to the backend index.php
RewriteRule ^api/ index.php [L,QSA]

# If the request does not correspond to a file, serve index.html (for SPA)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [QSA,L]

